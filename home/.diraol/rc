# Use solarized colors from sigurdga/ls-colors-solarized
eval `dircolors ~/.dircolors/dircolors`

# Aliases
alias vimconfig="vim -p ~/.vimrc.local ~/.vimrc.bundles.local"

# Other exports
export DEFAULT_USER="diraol"
export EDITOR=vim
export GITHUB_USER='diraol'

# Sourcing other config files
source $HOME/.diraol/contexts
source $HOME/.diraol/aliases_general
source $HOME/.diraol/homesick_submodules_upstreams
source $HOME/.diraol/ssh
source $HOME/.diraol/radar

export JAVA_OPTS="-Djava.util.prefs.systemRoot=/home/diraol/.java -Djava.util.prefs.userRoot=/home/diraol/.java/.userPrefs"

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

if command -v pyenv 1>/dev/null 2>&1; then 
  eval "$(pyenv init -)"
fi
