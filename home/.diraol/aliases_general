alias sizesort='du -a -h --max-depth=1 | sort -hr'

# vim shortcut
alias vim='vim -p'

# Android dev
# export PATH=/home/diraol/tools/android-sdk-linux/tools:/home/diraol/tools/android-sdk-linux/platform-tools:$PATH

# Vim plugins update
alias update_vimplugins="vim +BundleInstall +BundleClean +qall"

# Shutdown on console with root password
alias desligar='su -c"shutdown -h now"'

# For lenovo x230t
function reboot_wacom() {
    echo "Rebootando o Wacom device"
    echo "Insira a senha de root do sistema"
    su - -c 'rmmod wacom; modprobe wacom'
}

# Force TMUX to support 256 color terminal
alias tmux="tmux -2"
# Smart alias to search for aliases based on regex
alias sa='alias | grep -i'
